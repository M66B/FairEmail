<?xml version="1.0" encoding="utf-8"?>
<eu.faircode.email.ScrollViewEx xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:scrollbarStyle="outsideOverlay"
    tools:context="eu.faircode.email.ActivityView">

    <eu.faircode.email.ConstraintLayoutEx
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivOAuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_oauth"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvOauth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvOauth"
            app:srcCompat="@drawable/twotone_security_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvOauth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_oauth"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivOAuth"
            app:layout_constraintTop_toTopOf="parent" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivPrimaryConnected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_folder_connected"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPrimaryConnected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvPrimaryConnected"
            app:srcCompat="@drawable/twotone_folder_done_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvPrimaryConnected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_folder_connected"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPrimaryConnected"
            app:layout_constraintTop_toBottomOf="@id/tvOauth" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivPrimaryDisconnected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_folder_disconnected"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPrimaryDisconnected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvPrimaryDisconnected"
            app:srcCompat="@drawable/twotone_folder_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvPrimaryDisconnected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_folder_disconnected"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPrimaryDisconnected"
            app:layout_constraintTop_toBottomOf="@id/tvPrimaryConnected" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivDownloadOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_download_on"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvDownloadOn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvDownloadOn"
            app:srcCompat="@drawable/twotone_mail_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvDownloadOn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_download_on"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivDownloadOn"
            app:layout_constraintTop_toBottomOf="@id/tvPrimaryDisconnected" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivDownloadOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_download_off"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvDownloadOff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvDownloadOff"
            app:srcCompat="@drawable/twotone_mail_outline_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvDownloadOff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_download_off"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivDownloadOff"
            app:layout_constraintTop_toBottomOf="@id/tvDownloadOn" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivSynchronize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_synchronize_on"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvSynchronize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvSynchronize"
            app:srcCompat="@drawable/twotone_sync_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvSynchronize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_synchronize_on"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivSynchronize"
            app:layout_constraintTop_toBottomOf="@id/tvDownloadOff" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivSynchronizeOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_synchronize_off"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvSynchronizeOff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvSynchronizeOff"
            app:srcCompat="@drawable/twotone_sync_disabled_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvSynchronizeOff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_synchronize_off"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivSynchronizeOff"
            app:layout_constraintTop_toBottomOf="@id/tvSynchronize" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivSynchronizePoll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_synchronize_poll"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvSynchronizePoll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvSynchronizePoll"
            app:srcCompat="@drawable/twotone_hourglass_top_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvSynchronizePoll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_synchronize_poll"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivSynchronizePoll"
            app:layout_constraintTop_toBottomOf="@id/tvSynchronizeOff" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivDisconnected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_disconnected"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvDisconnected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvDisconnected"
            app:srcCompat="@drawable/twotone_cloud_off_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvDisconnected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_disconnected"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivDisconnected"
            app:layout_constraintTop_toBottomOf="@id/tvSynchronizePoll" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivConnecting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_connecting"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvConnecting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvConnecting"
            app:srcCompat="@drawable/twotone_cloud_queue_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvConnecting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_connecting"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivConnecting"
            app:layout_constraintTop_toBottomOf="@id/tvDisconnected" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivConnected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_connected"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvConnected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvConnected"
            app:srcCompat="@drawable/twotone_cloud_done_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvConnected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_connected"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivConnected"
            app:layout_constraintTop_toBottomOf="@id/tvConnecting" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivBackoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_backoff"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvBackoff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvBackoff"
            app:srcCompat="@drawable/twotone_update_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvBackoff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_backoff"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toStartOf="@id/ibInfoBackoff"
            app:layout_constraintStart_toEndOf="@id/ivBackoff"
            app:layout_constraintTop_toBottomOf="@id/tvConnected" />

        <eu.faircode.email.FixedImageButton
            android:id="@+id/ibInfoBackoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_info"
            android:tooltipText="@string/title_info"
            app:layout_constraintBottom_toBottomOf="@id/tvBackoff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvBackoff"
            app:srcCompat="@drawable/twotone_info_24" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivQuota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_backoff"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvQuota"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvQuota"
            app:srcCompat="@drawable/twotone_disc_full_24"
            app:tint="?attr/colorWarning" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvQuota"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_quota"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivQuota"
            app:layout_constraintTop_toBottomOf="@id/tvBackoff" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivExecuting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_executing"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvExecuting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvExecuting"
            app:srcCompat="@drawable/twotone_dns_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvExecuting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_executing"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivExecuting"
            app:layout_constraintTop_toBottomOf="@id/tvQuota" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivSynchronizing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_synchronizing"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvSynchronizing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvSynchronizing"
            app:srcCompat="@drawable/twotone_compare_arrows_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvSynchronizing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_synchronizing"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivSynchronizing"
            app:layout_constraintTop_toBottomOf="@id/tvExecuting" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivDownloading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_downloading"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvDownloading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvDownloading"
            app:srcCompat="@drawable/twotone_cloud_download_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvDownloading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_downloading"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivDownloading"
            app:layout_constraintTop_toBottomOf="@id/tvSynchronizing" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivClosing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_closing"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvClosing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvClosing"
            app:srcCompat="@drawable/twotone_cancel_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvClosing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_closing"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivClosing"
            app:layout_constraintTop_toBottomOf="@id/tvDownloading" />
    </eu.faircode.email.ConstraintLayoutEx>
</eu.faircode.email.ScrollViewEx>
