<?xml version="1.0" encoding="utf-8"?>
<eu.faircode.email.ScrollViewEx xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:scrollbarStyle="outsideOverlay"
    tools:context="eu.faircode.email.ActivityView">

    <eu.faircode.email.ConstraintLayoutEx
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_unified"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvUnified"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvUnified"
            app:srcCompat="@drawable/twotone_folder_special_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvUnified"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_unified"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivType"
            app:layout_constraintTop_toTopOf="parent" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivInbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_inbox"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvInbox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvInbox"
            app:srcCompat="@drawable/twotone_inbox_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvInbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_inbox"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivInbox"
            app:layout_constraintTop_toBottomOf="@id/tvUnified" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivOutbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_outbox"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvOutbox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvOutbox"
            app:srcCompat="@drawable/twotone_outbox_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvOutbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_outbox"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivOutbox"
            app:layout_constraintTop_toBottomOf="@id/tvInbox" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivDrafts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_drafts"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvDrafts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvDrafts"
            app:srcCompat="@drawable/twotone_drafts_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvDrafts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_drafts"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivDrafts"
            app:layout_constraintTop_toBottomOf="@id/tvOutbox" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_sent"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvSent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvSent"
            app:srcCompat="@drawable/twotone_send_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvSent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_sent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivSent"
            app:layout_constraintTop_toBottomOf="@id/tvDrafts" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivArchive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_archive"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvArchive"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvArchive"
            app:srcCompat="@drawable/twotone_archive_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvArchive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_archive"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivArchive"
            app:layout_constraintTop_toBottomOf="@id/tvSent" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivTrash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_trash"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTrash"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTrash"
            app:srcCompat="@drawable/twotone_delete_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvTrash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_trash"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivTrash"
            app:layout_constraintTop_toBottomOf="@id/tvArchive" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivJunk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_junk"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvJunk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvJunk"
            app:srcCompat="@drawable/twotone_report_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvJunk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_junk"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivJunk"
            app:layout_constraintTop_toBottomOf="@id/tvTrash" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_primary"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPrimary"
            app:srcCompat="@drawable/twotone_star_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_primary"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPrimary"
            app:layout_constraintTop_toBottomOf="@id/tvJunk" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivSubscribed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_subscribed"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvSubscribed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvSubscribed"
            app:srcCompat="@drawable/twotone_bookmark_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvSubscribed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_subscribed"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivSubscribed"
            app:layout_constraintTop_toBottomOf="@id/tvPrimary" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivRule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_edit_rules"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvRule"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvRule"
            app:srcCompat="@drawable/twotone_filter_alt_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvRule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_rule"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivRule"
            app:layout_constraintTop_toBottomOf="@id/tvSubscribed" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_notify"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvNotify"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvNotify"
            app:srcCompat="@drawable/twotone_notifications_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvNotify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_notify"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivNotify"
            app:layout_constraintTop_toBottomOf="@id/tvRule" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvDownloadFetch"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="1/23"
            android:textAppearance="@android:style/TextAppearance.Small"
            app:layout_constraintBottom_toBottomOf="@+id/tvDownloadFetchLegend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvDownloadFetchLegend" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivDownloadFetch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_download_fetch"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvDownloadFetchLegend"
            app:layout_constraintStart_toEndOf="@id/tvDownloadFetch"
            app:layout_constraintTop_toTopOf="@+id/tvDownloadFetchLegend"
            app:srcCompat="@drawable/twotone_mail_outline_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvDownloadFetchLegend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_download_fetch"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivDownloadFetch"
            app:layout_constraintTop_toBottomOf="@id/tvNotify" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvSyncKeep"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="1/23"
            android:textAppearance="@android:style/TextAppearance.Small"
            app:layout_constraintBottom_toBottomOf="@+id/tvSyncKeepLegend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvSyncKeepLegend" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivSyncKeep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_sync_keep"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvSyncKeepLegend"
            app:layout_constraintStart_toEndOf="@id/tvSyncKeep"
            app:layout_constraintTop_toTopOf="@+id/tvSyncKeepLegend"
            app:srcCompat="@drawable/twotone_sync_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvSyncKeepLegend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_sync_keep"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivSyncKeep"
            app:layout_constraintTop_toBottomOf="@id/tvDownloadFetchLegend" />

        <eu.faircode.email.FixedImageView
            android:id="@+id/ivStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_legend_stop"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvStop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvStop"
            app:srcCompat="@drawable/twotone_stop_24" />

        <eu.faircode.email.FixedTextView
            android:id="@+id/tvStop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="@string/title_legend_stop"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivStop"
            app:layout_constraintTop_toBottomOf="@id/tvSyncKeepLegend" />
    </eu.faircode.email.ConstraintLayoutEx>
</eu.faircode.email.ScrollViewEx>
